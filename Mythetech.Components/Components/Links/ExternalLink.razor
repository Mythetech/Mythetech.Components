@using MudBlazor
@using Mythetech.Components.Infrastructure
<MudLink OnClick="OnLinkClicked">
    @ChildContent
</MudLink>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public string Link { get; set; }
    
    [Inject]
    protected ILinkOpenService LinkService { get; set; }

    protected void OnLinkClicked()
        => LinkService.OpenLink(Link);

}