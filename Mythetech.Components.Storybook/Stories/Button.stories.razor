@using Mythetech.Components.Components.Buttons
@using Mythetech.Components.Enums
@attribute [Stories("Components/Button")]

<Stories TComponent="Button">

    <ArgType For="_ => _.Color" Control="ControlType.Color"/>
    <ArgType For="_ => _.Class" Control="ControlType.Default" />

    <ProductStory TComponent="Button">
        <Arguments>
            <Arg For="_ => _.Color" Value="Color.Primary"/>
            <Arg For="_ => _.Variant" Value="Variant.Filled" />
            <Arg For="_ => _.Text" Value="@("Button")" />
            <Arg For="_ => _.Class" Value="@("")" />
            <Arg For="_ => _.Roundedness" Value="Roundedness.XL" />
        </Arguments>

        <Template>
            <Button @attributes="context.Args" Class="@(context.Args["Class"]?.ToString() ?? "")">
            </Button>
        </Template>
    </ProductStory>
</Stories>