<MudThemeProvider Theme="@(Theme)" IsDarkMode="@_isDarkMode"/>
<MudPopoverProvider />
<MudPaper Outlined="false" Height="100%" Width="100%" Class="pa-1">

<MudStack Row Class="d-flex mud-width-full">
    <MudSpacer/>
    <MudTooltip Text="@(_isDarkMode ? "Switch to Light" : "Switch to Dark")" Placement="Placement.Left">
        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.TwoTone.WbSunny : Icons.Material.TwoTone.ModeNight)" OnClick="(() => { _isDarkMode = !_isDarkMode; StateHasChanged(); })"/>
    </MudTooltip>
</MudStack>

    @ChildContent
</MudPaper>

@code {
    private bool _isDarkMode = true;
}

@code {
    [Parameter]
    public MudTheme Theme { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent
    {
        get;
        set;
    }
}