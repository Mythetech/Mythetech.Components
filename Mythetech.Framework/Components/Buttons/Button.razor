@using MudBlazor
@using Mythetech.Framework.Enums
@inherits MudComponentBase

<MudButton Class="@($"{Roundedness.Class()} {Class}")" Style="@Style" Variant="@Variant" Color="@Color" Ripple="false" OnClick="@OnClick">
    @Text
</MudButton>


@code {
    /// <summary>
    /// Text to display
    /// </summary>
    [Parameter]
    public string? Text { get; set; }

    /// <summary>
    /// Variant of the Button with default
    /// </summary>
    [Parameter] public Variant Variant { get; set; } = Variant.Filled;

    /// <summary>
    /// Color theme of the Button with default
    /// </summary>
    [Parameter] public Color Color { get; set; } = Color.Primary;

    /// <summary>
    /// Roundedness of the Button with default
    /// </summary>
    [Parameter] public Roundedness Roundedness { get; set; } = Roundedness.Large;

    /// <summary>
    /// Callback invoked when the button is clicked
    /// </summary>
    [Parameter] public EventCallback OnClick { get; set; } = default!;
}